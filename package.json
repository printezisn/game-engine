{
  "name": "@printezisn/game-engine",
  "type": "module",
  "version": "0.4.2",
  "author": {
    "name": "Nikos Printezis",
    "url": "https://printezisn.github.io/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/printezisn/game-engine"
  },
  "homepage": "https://printezisn.github.io/",
  "files": [
    "dist",
    "bin"
  ],
  "module": "./dist/game-engine.js",
  "main": "./dist/game-engine.umd.cjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/game-engine.js",
      "require": "./dist/game-engine.umd.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "engines": {
    "node": ">=20"
  },
  "bin": {
    "build-game-audio": "./bin/audiosprite.js",
    "build-game-assets": "./bin/assetpack.js"
  },
  "scripts": {
    "build": "vite build",
    "lint": "tsc && eslint ./src",
    "lint:fix": "tsc && eslint ./src --fix",
    "prettier:format": "prettier --write .",
    "prepare": "husky && vite build",
    "test:unit": "vitest run ./src --passWithNoTests"
  },
  "dependencies": {
    "husky": "9.1.6",
    "vite": "5.4.10",
    "vite-plugin-dts": "4.3.0",
    "gsap": "3.12.5",
    "matter-js": "0.20.0",
    "mini-signals": "2.0.0",
    "pixi.js": "8.5.2",
    "@pixi/sound": "6.0.1",
    "vitest": "2.1.4",
    "typescript": "5.6.2",
    "typescript-eslint": "8.13.0",
    "@types/matter-js": "0.19.7"
  },
  "devDependencies": {
    "@assetpack/core": "1.2.1",
    "@eslint/js": "9.14.0",
    "audiosprite": "0.7.2",
    "eslint": "9.14.0",
    "globals": "15.12.0",
    "jsdom": "25.0.1",
    "prettier": "3.3.3"
  }
}
